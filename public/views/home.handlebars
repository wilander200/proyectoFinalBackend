<div class="mt-4">
<div class="d-flex justify-content-around">
<form class="" action="/api/carrito" method="POST">
            <div class="d-flex justify-content-around align-items-center">
                <button class="btn btn-outline-primary h-50" >CARRITO</button>
            </div>    
</form>
<form class="" action="/api/logout" method="GET">
            <div class="d-flex justify-content-around align-items-center">
                <button class="btn btn-outline-primary h-50" >DATOS DE USUARIO</button>
            </div>    
</form> 
<form class="" action="/api/logout" method="POST">
            <div class="d-flex justify-content-around align-items-center">
                <button class="btn btn-outline-primary h-50" >CERRAR SESION</button>
            </div>    
</form> 
</div>

<div class="h-100 w-100 mt-5">
    {{#if productoTrue}}
    <div class="table w-75 mx-auto">
        <table class="table table-light table-striped">
            <tr>
                <th class="text-center">productos</th>

            </tr>
            {{#each producto}}
            <tr>
                <td class="text-center">{{this}}</td>
            </tr>
            {{/each}}
        </table>
    </div>
    {{else}}
    <h3 class="alert alert-danger">No hay productos</h3>
    {{/if}}
    </div>